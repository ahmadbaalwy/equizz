@model IEnumerable<wajeb004.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>My Joined Courses/Classes</h2>

<p>
<a class="btn btn-default" href="@Url.Action("Create","Students")">Join Course/Class &raquo;</a>

</p>
<table>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="border-radius: 25px; border: 1px solid black;">
                <h2>@Html.DisplayFor(modelItem => item.eClass.course.courseName)</h2>
                <h3>@Html.DisplayFor(modelItem => item.eClass.EClassName)</h3>

                <p>
                <p><a class="btn btn-default" href="@Url.Action("DetailsForStudents","EClasses",new { id = item.eClass.ID, studentId=item.ID })">Open This Class &raquo;</a></p>

            </div>
            <div class="col-md-1"></div>
        }
    </div>
</table>

